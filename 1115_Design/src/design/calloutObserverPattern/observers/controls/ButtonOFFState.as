package design.calloutObserverPattern.observers.controls{import design.calloutObserverPattern.observers.controls.abstract.Context_Button_ON_OFF;import design.calloutObserverPattern.observers.controls.abstract.IState_ButtonONOFF;import com.dell.alienFx.GlobalAnim;import com.greensock.TweenLite;import flash.display.MovieClip;import flash.display.Sprite;//Stop State;	public class ButtonOFFState implements IState_ButtonONOFF	{        private var buttons:Context_Button_ON_OFF;        private var newState:IState_ButtonONOFF;        private var target:Sprite;		public function ButtonOFFState(_buttons:Context_Button_ON_OFF, _target:Sprite)		{			this.buttons=_buttons;            this.target = _target;//            buildUI();		}		public function ON():void		{//            trace("toggle ON = ButtonOFFState")            newState = buttons.getOnButtonState();            transitionOut();        }        public function OFF():void        {//            trace("toggle ON = ButtonOFFState")//            trace("Your button is already OFF");		}        public function OVER():void {//            trace("toggle OVER = ButtonOFFState")        }        public function transitionOut():void {//            trace("transition from " + buttons.getState())            TweenLite.to(this.target, GlobalAnim.TRANSISITION, {offTextAlpha:0, onComplete:transitionOn});            TweenLite.to(this.target, GlobalAnim.TRANSISITION, {plusAlpha: 0});        }        public function transitionOn():void {            buttons.setState( newState );            TweenLite.to(this.target, GlobalAnim.TRANSISITION, {labelOnBg:1});            TweenLite.to(this.target, GlobalAnim.TRANSISITION, {onTextAlpha:1});            TweenLite.to(this.target, GlobalAnim.TRANSISITION, {minusAlpha: 1});        }        public function buildUI():void {        }	}}